<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th>Headline</th>
      <th>Address</th>
      <th>Phone1</th>
      <th>Phone2</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.logo %></td>
        <td><%= company.headline %></td>
        <td><%= company.address %></td>
        <td><%= company.phone1 %></td>
        <td><%= company.phone2 %></td>
        <td><%= company.lat %></td>
        <td><%= company.lng %></td>
        <td><%= company.active %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

